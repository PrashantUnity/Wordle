<MudDialog>
    <DialogContent>
        <MudList>
            <MudListItem>
                <MudText>
                    Guess the hidden word in 6 tries.
                </MudText> 
                <MudText>
                    Each guess must be a valid 5 letter word, you cannot enter random letters. Hit the enter button to submit the guess.
                </MudText> 
                <MudText>
                    After your submission, the color of the tiles will change as in the examples below.
                </MudText>
            </MudListItem>
            <MudDivider />
            <MudListItem>
                <MudPaper Class="d-flex justify-start flex-grow-1 gap-4" Elevation="0">
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:green">
                        <MudText Typo="Typo.h4" Style="color:white">
                            <strong>G</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>A</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>M</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>E</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>S</strong>
                        </MudText>
                    </MudPaper>
                </MudPaper>
            </MudListItem>
            <MudListItem>
                <MudText>
                    The letter G is in the word and in the correct spot.
                </MudText>
            </MudListItem> 
            <MudListItem>
                <MudPaper Class="d-flex justify-start flex-grow-1 gap-4" Elevation="0">
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>H</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:orange">
                        <MudText Typo="Typo.h4" Style="color:white">
                            <strong>O</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>T</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>E</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>L</strong>
                        </MudText>
                    </MudPaper>
                </MudPaper>
            </MudListItem>
            <MudListItem>
                <MudText>
                    The letter <strong>O</strong> is in the word but in the wrong spot.
                </MudText>
            </MudListItem> 
            
            <MudListItem>
                <MudPaper Class="d-flex justify-start flex-grow-1 gap-4" Elevation="0">
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:grey">
                        <MudText Typo="Typo.h4" Style="color:white">
                            <strong>C</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>L</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>I</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:grey">
                        <MudText Typo="Typo.h4" Style="color:white">
                            <strong>C</strong>
                        </MudText>
                    </MudPaper>
                    <MudPaper Class="containerWord"
                              Width="64px"
                              Height="64px"
                              Style="border-width:1px;border-radius:10px;border-color:black;background-color:white">
                        <MudText Typo="Typo.h4" Style="color:black">
                            <strong>K</strong>
                        </MudText>
                    </MudPaper>
                </MudPaper>
            </MudListItem>
            <MudListItem>
                <MudText>
                    The letter <strong>C</strong> is not in the word in any spot.
                </MudText>
            </MudListItem>
        </MudList>
        <MudButton Color="Color.Primary" Variant=Variant.Filled OnClick="Submit" FullWidth=true>Close</MudButton>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}

<style>
    .containerWord {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
